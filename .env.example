# Azure OpenAI Configuration
# Copy this file to .env and fill in your credentials

# API version - use the version supported by your deployment
# Common versions: 2024-02-15-preview, 2023-12-01-preview, 2023-05-15
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Your Azure OpenAI endpoint URL
# Format: https://<your-resource-name>.openai.azure.com/
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Your deployment name (e.g., gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Your Azure OpenAI API key
# Find this in Azure Portal under your OpenAI resource -> Keys and Endpoint
AZURE_OPENAI_API_KEY=your_api_key_here
